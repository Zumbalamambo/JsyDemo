<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_10dp"
        android:background="@mipmap/two_item_back"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_3dp"
            android:background="@color/common_transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_20dp"
            android:layout_marginTop="@dimen/common_10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/two_item_icon"
                android:layout_width="@dimen/common_20dp"
                android:layout_height="@dimen/common_20dp"
                android:src="@mipmap/money" />

            <TextView
                android:id="@+id/two_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金白卡" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="@dimen/common_16dp"
            android:layout_marginRight="@dimen/common_16dp"
            android:layout_marginTop="@dimen/common_10dp"
            android:background="@drawable/horizonta_line"
            android:gravity="center_vertical"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/common_150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="借款金额" />

                <LinearLayout
                    android:id="@+id/two_item_je_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_5dp"
                    android:background="@drawable/corner_view2"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="金额"

                        />

                    <TextView
                        android:id="@+id/two_item_je"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="1000" />

                    <TextView
                        android:layout_width="@dimen/common_12dp"
                        android:layout_height="@dimen/common_12dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/common_3dp"
                        android:background="@drawable/spinner_plush"
                        android:gravity="center" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="@dimen/common_60dp"
                android:layout_height="@dimen/common_60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-20dp"
                android:layout_marginRight="-20dp"
                android:background="@drawable/vertical_line"
                android:layerType="software" />

            <LinearLayout
                android:layout_width="@dimen/common_150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="借款金额" />

                <LinearLayout
                    android:id="@+id/two_item_qx_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_5dp"
                    android:background="@drawable/corner_view2"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="期限"

                        />

                    <TextView
                        android:id="@+id/two_item_qx"
                        android:layout_width="@dimen/common_60dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="10个月" />

                    <TextView
                        android:layout_width="@dimen/common_12dp"
                        android:layout_height="@dimen/common_12dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/common_3dp"
                        android:background="@drawable/spinner_plush"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/two_item_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_10dp"
                android:layout_marginLeft="@dimen/common_60dp"
                android:layout_marginRight="@dimen/common_60dp"
                android:background="@drawable/corner_view"
                android:text="立即提现"
                android:textColor="@color/white"

                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>