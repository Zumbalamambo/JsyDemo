<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/app_title_back_color"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:padding="@dimen/common_6dp"
            android:id="@+id/tv_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/common_16dp" />
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_input_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_20dp"
        android:layout_marginLeft="@dimen/common_20dp"
        android:textColor="@color/black"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginRight="@dimen/common_30dp"
            android:layout_marginLeft="@dimen/common_30dp"
            android:id="@+id/dialog_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
        <EditText
            android:id="@+id/et_input_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_10dp"
            android:layout_marginRight="@dimen/common_10dp"
            android:layout_marginTop="@dimen/common_10dp"
            android:background="@drawable/corner_view2"
            android:focusable="true"
            android:hint="@string/plase_input_smscode"
            android:padding="@dimen/common_4dp"
            android:textSize="@dimen/common_16dp" />

            <Button
                android:visibility="gone"
                android:id="@+id/et_input_value_button"
                android:layout_width="@dimen/common_70dp"
                android:layout_height="@dimen/common_30dp"
                android:background="@drawable/corner_view"
                android:text="发送"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="@dimen/common_30dp"
            android:layout_marginRight="@dimen/common_30dp"
            android:id="@+id/dialog_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

          <EditText
            android:focusable="true"
            android:id="@+id/et_input_value2"
            android:layout_marginTop="@dimen/common_10dp"
            android:layout_marginBottom="@dimen/common_10dp"
            android:layout_width="0dp"
              android:layout_weight="1"
              android:hint="@string/plase_input_imgcode"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_10dp"
            android:background="@drawable/corner_view2"
            android:padding="@dimen/common_4dp"
            android:textSize="@dimen/common_16dp"

              />

            <ImageView
                android:id="@+id/checkcode_img"
                android:layout_width="@dimen/common_70dp"
                android:layout_height="@dimen/common_30dp" />


        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/tv_input_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_60dp"
        android:layout_marginRight="@dimen/common_60dp"
        android:layout_marginTop="@dimen/common_30dp"
        android:layout_marginBottom="@dimen/common_30dp"
        android:background="@drawable/corner_view"
        android:gravity="center"
        android:padding="@dimen/common_6dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/common_16dp" />


</LinearLayout>