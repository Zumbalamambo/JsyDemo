<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_light_grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_40dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@mipmap/personal_center_title_back"
        >

    <TextView
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="@string/name_two_fm"
        android:textColor="@color/white"
        android:textSize="@dimen/common_16dp" />

    </LinearLayout>
    <!--<include layout="@layout/second_item"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <cn.jishiyu11.xjsjd.view.RefreshRecyclerView
            android:id="@+id/two_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></cn.jishiyu11.xjsjd.view.RefreshRecyclerView>

    </LinearLayout>

</LinearLayout>
